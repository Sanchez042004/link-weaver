# Environment
NODE_ENV=development

# Server
PORT=3001

# Database (PostgreSQL)
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_base_datos
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/linkweaver

# Redis
# Formato: redis://host:puerto
REDIS_URL=redis://localhost:6379

# JWT (JSON Web Token)
# IMPORTANTE: En producción, usa una clave de al menos 32 caracteres aleatorios
JWT_SECRET=tu-clave-super-secreta-de-al-menos-32-caracteres-cambiame-en-produccion
JWT_EXPIRES_IN=7d

# Frontend URL (para CORS y enlaces de correo)
# IMPORTANTE: En producción, usa tu dominio real sin barra diagonal al final (ej: https://app.tu-dominio.com)
FRONTEND_URL=http://localhost:3000

# Configuración de Email (SMTP/Gmail)
# Para Gmail, usa una "Contraseña de Aplicación" si tienes 2FA activado
SMTP_USER=tu-correo@gmail.com
SMTP_PASS=tu-clave-de-aplicacion

# Opcional: Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Environment
NODE_ENV=development

# Server
PORT=3001

# Database (PostgreSQL)
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_base_datos
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/linkweaver

# Redis
# Formato: redis://host:puerto
REDIS_URL=redis://localhost:6379

# JWT (JSON Web Token)
# IMPORTANTE: En producción, usa una clave de al menos 32 caracteres aleatorios
JWT_SECRET=tu-clave-super-secreta-de-al-menos-32-caracteres-cambiame-en-produccion
JWT_EXPIRES_IN=7d

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000

# Opcional: Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

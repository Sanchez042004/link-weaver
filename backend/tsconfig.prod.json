{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        /* Relax strict checks for production build */
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "strict": false,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}